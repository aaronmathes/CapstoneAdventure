@using Capstone_Xavier.Models
@model CharacterModel
@{
    ViewBag.Title = "UpdateCharacter";
}
<div class="nav-side">
    <div class="dropdown">
        <button onclick="dropDown()" class="dropBtn">More</button>
        <div id="myDropdown" class="dropdown-item">
            <a onclick="location.href='@Url.Action("Users", "Home")'">User Home</a>
            <a onclick="location.href='@Url.Action("UserInfo", "User")'">Profile</a>
            @{
                string role = Session["Role"].ToString();

                if (role == "1" || role == "2")
                {
                    <a onclick="location.href='@Url.Action("Admin", "Admin")'">Admin</a>
                }
            }
            @*<a href="#">@Html.ActionLink("FAQS", "FAQS", "Home")</a>*@
            <a onclick="location.href='@Url.Action("Logout", "Home")'">Logout</a>
        </div>
    </div>
</div>
<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="info-box">
            <label>Name</label>
            <p class="c-info">@Model.name</p>
            <label>Class</label>
            <p class="c-info">@Model.className</p>
            <label>Level</label>
            <p class="c-info">@Model.level</p>
            <label>Experience</label>
            <p class="c-info"> @Model.xp / @Model.maxXp</p>
        </div>
    </div>
    @using (Html.BeginForm("UpdateCharacterInfo", "User", Model))
    {
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="nav-side2">
                <div class="input-list">
                    <div class="input">
                        <label>Character Name</label>
                        <span class="icon-input"></span>
                        @Html.EditorFor(CharacterModel => CharacterModel.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter First Name" } })

                    </div>
                    <br>
                    <div class="input">
                        <label>Class</label>
                        <span class="icon-input"></span>

                        @Html.DropDownListFor(Model => Model.classID, new SelectList(Model.classes, "classID", "className"), new { @id = "classID", @class = "form-control" })

                    </div>
                </div>

                <button type="submit" class="btn-user" onclick="">Submit</button>
            </div>
        </div>

    }
</div>